<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:rowCount="3"
            tools:ignore="UselessParent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:padding="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="12dp"
                tools:ignore="ObsoleteLayoutParam,OnClick"
                android:onClick="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jn.chart.charts.PieChart
                        android:id="@+id/pieChart1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <TextView
                        android:id="@+id/tv_room1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间1"
                        android:textSize="12sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:padding="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="12dp"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jn.chart.charts.PieChart
                        android:id="@+id/pieChart2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <TextView
                        android:id="@+id/tv_room2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间2"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_centerInParent="true"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:padding="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="12dp"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jn.chart.charts.PieChart
                        android:id="@+id/pieChart3"
                        android:layout_width="match_parent"
                        android:layout_height="210dp" />

                    <TextView
                        android:id="@+id/tv_room3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间3"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:padding="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="12dp"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jn.chart.charts.PieChart
                        android:id="@+id/pieChart4"
                        android:layout_width="match_parent"
                        android:layout_height="195dp" />

                    <TextView
                        android:id="@+id/tv_room4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="房间4"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="164dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:padding="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="12dp"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jn.chart.charts.PieChart
                        android:id="@+id/pieChart5"
                        android:layout_width="match_parent"
                        android:layout_height="135dp" />

                    <TextView
                        android:id="@+id/tv_room5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="房间5"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
    </ScrollView>
</FrameLayout>